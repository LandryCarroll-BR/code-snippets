    "tailwindcss-radix-colors": "^0.5.1"
  },
  "devDependencies": {
    "@snippets/tsconfig": "workspace:*",
    "eslint-config-custom": "workspace:*",
    "autoprefixer": "^10.4.15"
  },
  "volta": {
    "extends": "../../../package.json"
  }
