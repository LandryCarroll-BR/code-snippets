{
  "name": "@snippet/tailwind",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Tailwind configuration for Snippets",
  "author": "Landry Carroll",
  "type": "module",
  "main": "./dist/tailwind.config.js",
  "exports": {
    ".": "./dist/tailwind.config.js",
    "./postcss.config.cjs": "./postcss.config.cjs"
